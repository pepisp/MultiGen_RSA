# -*- coding: utf-8 -*-
<Multigen>:
    orientation:'vertical'

    GridLayout:
        cols:5
        size_hint_y:.05
        Spinner:
            id:measurementPoint_spinner
            text_autoupdate:True
            values:("Punkt1",)

        Button:
            text:"+"
            on_release:root.add_measurePoint()
            size_hint_x:.2
        Button:
            text:"Konfig"
            on_release:app.open_settings()
            size_hint_x:.2
    GridLayout:
        cols:2
        size_hint_y:.9

        GridLayout:
            cols:1
            size_hint_x:.2
            ToggleButton:
                id:Gen1Button
                group:'freq'
                text:str(int(app.config.get("F1","F1Center"))/(1000000)) +" MHz"
            ToggleButton:
                group:'freq'

                text:str(int(app.config.get("F2","F2Center"))/(1000000)) +" MHz"
            ToggleButton:
                group:'freq'

                text:str(int(app.config.get("F3","F3Center"))/(1000000)) +" MHz"
            ToggleButton:
                group:'freq'
                text:str(int(app.config.get("F4","F4Center"))/(1000000)) +" MHz"
            ToggleButton:
                group:'freq'

                text:str(int(app.config.get("F5","F5Center"))/(1000000)) +" MHz"
            ToggleButton:
                group:'freq'

                text:str(int(app.config.get("F6","F6Center"))/(1000000)) +" MHz"
            ToggleButton:
                group:'freq'

                text:str(int(app.config.get("F7","F7Center"))/(1000000)) +" MHz"
            ToggleButton:
                group:'freq'

                text:str(int(app.config.get("F8","F8Center"))/(1000000)) +" MHz"
            ToggleButton:
                group:'freq'
                text:u"2400 MHz"
                text:str(int(app.config.get("F9","F9Center"))/(1000000)) +" MHz"
        PlotArea:
            size_hint_x:.8
            text:u'Tu bÄ™dzie wykres'

<NewPointPopup>:
    pointName:pointName
    title:'Dodaj nowy punkt'
    title_align:'center'
    auto_dismiss: False
    size_hint:0.5,0.5
    GridLayout:
        cols:1
        Label:
            text:'Nazwa punktu pomiarwego:'
            halign: 'right'
            size_hint_y:0.2
        TextInput:
            id:pointName
            size_hint_y:0.25
            multiline:False
            text:'nowypunkt'
        Label:
            text:'Opis punktu pomiarowego:'
            halign: 'right'
            size_hint_y:0.2
        TextInput:
            text:''
        GridLayout:
            cols:2
            size_hint_y:0.2
            Button:
                text: 'Dodaj'
                on_release: root.dismiss_add()
            Button:
                text: 'Anuluj'
                on_release: root.dismiss()
