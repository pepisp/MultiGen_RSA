# -*- coding: utf-8 -*-
<FrequencyToggleButton@ToggleButton>:
    group:'freq'
    allow_no_selection:False


<Multigen>:
    orientation:'vertical'
    plotArea:plotArea
    GridLayout:
        cols:6
        size_hint_y:.05
        size_hint_max_y:40

        Image:
            source: 'img/separator.png'
            # y: self.parent.y
            # x: self.parent.x
            center_x: self.parent.center_x
            center_y: self.parent.center_y
            size_hint_max_x: 100
            size_hint_y:32
            allow_stretch: False

        Button:
            #background_normal:''
            #background_color:(0,0,0,0)
            size_hint_max_x:40
            #on_press:self.background_color=(1,0,0,1)
            on_release:root.add_measurePoint()
            size_hint_x:.2
            Image:
                source: 'img/plus.png'
                # y: self.parent.y
                # x: self.parent.x
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size: 32, 32
                allow_stretch: False

        Spinner:
            size_hint_max_x:300
            canvas:
                Color:
                    rgba: 1, .3, .8, .5
            id:measurementPoint_spinner
            text_autoupdate:True
            on_press:root.selectedNewPoint()

        Widget:

        Button:
            # background_normal:''
            # background_color:(0,0,0,0)

            size_hint_max_x:40
            on_release:app.open_settings()
            size_hint_x:.2
            Image:
                source: 'img/settings.png'
                # y: self.parent.y
                # x: self.parent.x
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size: 32, 32
                allow_stretch: False
        Button:
            # background_normal:''
            # background_color:(0,0,0,0)
            size_hint_max_x:40
            on_release:root.rsaConnection()
            size_hint_x:.2
            Image:
                id:connection_button_image
                source: 'img/disconnected.png'
                # y: self.parent.y
                # x: self.parent.x
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size: 32, 32
                allow_stretch: False

    GridLayout:
        cols:2
        size_hint_y:.9

        GridLayout:
            cols:1
            size_hint_x:.1
            size_hint_max_x:100
            FrequencyToggleButton:
                id:Gen1Button
                state:'down'
                text:str(int(app.config.get("Range1","centerFreq"))/(1000000)) +" MHz"
            FrequencyToggleButton:

                text:str(int(app.config.get("Range2","centerFreq"))/(1000000)) +" MHz"
            FrequencyToggleButton:

                text:str(int(app.config.get("Range3","centerFreq"))/(1000000)) +" MHz"
            FrequencyToggleButton:

                text:str(int(app.config.get("Range4","centerFreq"))/(1000000)) +" MHz"
            FrequencyToggleButton:

                text:str(int(app.config.get("Range5","centerFreq"))/(1000000)) +" MHz"
            FrequencyToggleButton:

                text:str(int(app.config.get("Range6","centerFreq"))/(1000000)) +" MHz"
            FrequencyToggleButton:

                text:str(int(app.config.get("Range7","centerFreq"))/(1000000)) +" MHz"
            FrequencyToggleButton:

                text:str(int(app.config.get("Range8","centerFreq"))/(1000000)) +" MHz"
            FrequencyToggleButton:

                text:str(int(app.config.get("Range9","centerFreq"))/(1000000)) +" MHz"
        PlotArea:
            id:plotArea
            size_hint_x:.8
            text:u'Tu będzie wykres'

<NewPointPopup>:
    pointName:pointName
    pointDesc:pointDesc

    title:'Dodaj nowy punkt'
    title_align:'center'
    auto_dismiss: False
    size_hint:0.5,0.5
    size_hint_max:300,300
    GridLayout:
        cols:1
        Label:
            text:'Nazwa punktu pomiarwego:'
            halign: 'right'
            size_hint_y:0.2
        TextInput:
            id:pointName
            size_hint_y:0.25
            multiline:False
            text:'nowypunkt'
        Label:
            id:pointDesc
            text:'Opis punktu pomiarowego:'
            halign: 'right'
            size_hint_y:0.2
        TextInput:
            text:''
        GridLayout:
            cols:2
            size_hint_y:0.2
            Button:
                text: 'Dodaj'
                on_release: root.dismiss_add()
            Button:
                text: 'Anuluj'
                on_release: root.dismiss()
<WarnnigPopup>:
    title:'Uwaga!!!'
    title_align:'center'
    separator_color:1,0,0,1
    background_color:0,0,0,0
    auto_dismiss: False

    size_hint:0.5,0.5
    size_hint_max:300,200
    GridLayout:
        cols:1
        Label:
            text:'Punkt o tej nazwie już istnieje'

        Button:
            text: 'OK'
            size_hint_y:0.2
            on_release: root.dismiss()
